{
    "name": "repos-manager",
    "displayName": "Repos Manager",
    "description": "Advanced repository management for VS Code - scan, analyze, and organize your Git repositories efficiently",
    "version": "0.1.0",
    "publisher": "Rollphes",
    "repository": {
        "type": "git",
        "url": "https://github.com/Rollphes/repos-manager"
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "icon": "icon.png",
    "categories": [
        "Other"
    ],
    "keywords": [
        "git",
        "repository",
        "project",
        "manager",
        "filter",
        "profile",
        "scanner"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension/index.js",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "reposManager",
                    "name": "Repos Manager",
                    "when": "reposManager.enabled"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "reposManagerContainer",
                    "title": "Repos Manager",
                    "icon": "$(folder-library)"
                }
            ]
        },
        "commands": [
            {
                "command": "reposManager.refresh",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "reposManager.openSettings",
                "title": "Settings",
                "icon": "$(gear)"
            },
            {
                "command": "reposManager.scanRepositories",
                "title": "Scan Repositories"
            },
            {
                "command": "reposManager.openRepository",
                "title": "Open Repository"
            },
            {
                "command": "reposManager.openRepositoryInNewWindow",
                "title": "Open in New Window"
            },
            {
                "command": "reposManager.toggleFavorite",
                "title": "Toggle Favorite"
            },
            {
                "command": "reposManager.addToFavorites",
                "title": "Add to Favorites"
            },
            {
                "command": "reposManager.removeFromFavorites",
                "title": "Remove from Favorites"
            },
            {
                "command": "reposManager.search",
                "title": "Search Repositories",
                "icon": "$(search)"
            },
            {
                "command": "reposManager.filter",
                "title": "Filter Repositories",
                "icon": "$(filter)"
            },
            {
                "command": "reposManager.basicFilter",
                "title": "Basic Filter"
            },
            {
                "command": "reposManager.advancedFilter",
                "title": "Advanced Filter"
            },
            {
                "command": "reposManager.clearFilters",
                "title": "Clear All Filters",
                "icon": "$(clear-all)"
            },
            {
                "command": "reposManager.createFilterProfile",
                "title": "Create Filter Profile",
                "icon": "$(new-folder)"
            },
            {
                "command": "reposManager.switchFilterProfile",
                "title": "Switch Filter Profile",
                "icon": "$(filter)"
            },
            {
                "command": "reposManager.manageFilterProfiles",
                "title": "Manage Filter Profiles",
                "icon": "$(gear)"
            },
            {
                "command": "reposManager.exportFilterProfile",
                "title": "Export Filter Profile",
                "icon": "$(export)"
            },
            {
                "command": "reposManager.importFilterProfile",
                "title": "Import Filter Profile",
                "icon": "$(import)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "reposManager.refresh",
                    "when": "view == reposManager",
                    "group": "navigation@1"
                },
                {
                    "command": "reposManager.search",
                    "when": "view == reposManager",
                    "group": "navigation@3"
                },
                {
                    "command": "reposManager.filter",
                    "when": "view == reposManager",
                    "group": "navigation@4"
                },
                {
                    "command": "reposManager.clearFilters",
                    "when": "view == reposManager",
                    "group": "1_filter@1"
                },
                {
                    "command": "reposManager.createFilterProfile",
                    "when": "view == reposManager",
                    "group": "2_profile@1"
                },
                {
                    "command": "reposManager.switchFilterProfile",
                    "when": "view == reposManager",
                    "group": "2_profile@2"
                },
                {
                    "command": "reposManager.manageFilterProfiles",
                    "when": "view == reposManager",
                    "group": "2_profile@3"
                }
            ],
            "view/item/context": [
                {
                    "command": "reposManager.openRepository",
                    "when": "view == reposManager && viewItem == repository",
                    "group": "1_open@1"
                },
                {
                    "command": "reposManager.openRepositoryInNewWindow",
                    "when": "view == reposManager && viewItem == repository",
                    "group": "1_open@2"
                },
                {
                    "command": "reposManager.toggleFavorite",
                    "when": "view == reposManager && viewItem == repository",
                    "group": "2_favorites@1"
                },
                {
                    "command": "reposManager.addToFavorites",
                    "when": "view == reposManager && viewItem == repository && !reposManager.isFavorite",
                    "group": "2_favorites@2"
                },
                {
                    "command": "reposManager.removeFromFavorites",
                    "when": "view == reposManager && viewItem == repository && reposManager.isFavorite",
                    "group": "2_favorites@3"
                }
            ]
        },
        "configuration": {
            "title": "Repos Manager",
            "properties": {
                "reposManager.scanPaths": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "Root directories to scan for repositories"
                },
                "reposManager.excludePatterns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "node_modules",
                        ".git",
                        "dist",
                        "build",
                        ".next",
                        ".nuxt"
                    ],
                    "description": "Patterns to exclude from scanning"
                },
                "reposManager.maxDepth": {
                    "type": "number",
                    "default": 5,
                    "minimum": 1,
                    "maximum": 10,
                    "description": "Maximum depth for directory scanning"
                },
                "reposManager.displayMode": {
                    "type": "string",
                    "enum": [
                        "compact",
                        "standard",
                        "detailed"
                    ],
                    "default": "compact",
                    "description": "Display mode for repository list"
                },
                "reposManager.showFavorites": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show favorites section"
                },
                "reposManager.groupBy": {
                    "type": "string",
                    "enum": [
                        "none",
                        "language",
                        "owner"
                    ],
                    "default": "none",
                    "description": "Group repositories by criteria"
                },
                "reposManager.cacheEnabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable caching for better performance"
                },
                "reposManager.cacheTtlHours": {
                    "type": "number",
                    "default": 24,
                    "minimum": 1,
                    "maximum": 168,
                    "description": "Cache time-to-live in hours"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile-production",
        "compile": "webpack --mode development",
        "compile-production": "webpack --mode production",
        "watch": "webpack --mode development --watch",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "package": "vsce package",
        "deploy": "vsce publish",
        "ci": "npm run lint:fix && npm run test && npm run compile && npm run package",
        "ci:install": "npm run ci && code --install-extension repos-manager-0.1.0.vsix --force"
    },
    "devDependencies": {
        "@eslint/js": "^9.30.1",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.0.10",
        "@types/vscode": "^1.80.0",
        "@vscode/vsce": "^3.6.0",
        "eslint": "^9.30.1",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-jsdoc": "^51.3.3",
        "eslint-plugin-prettier": "^5.5.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "jest": "^30.0.3",
        "prettier": "^3.6.2",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.0",
        "typescript-eslint": "^8.35.1",
        "webpack": "^5.88.0",
        "webpack-cli": "^6.0.1"
    },
    "dependencies": {
        "glob": "^11.0.3",
        "semver": "^7.5.0",
        "simple-git": "^3.19.0"
    }
}