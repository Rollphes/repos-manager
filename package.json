{
    "name": "repos-manager",
    "displayName": "Repos Manager",
    "description": "Advanced repository management for VS Code - scan, analyze, and organize your Git repositories efficiently",
    "version": "0.1.0",
    "publisher": "Rollphes",
    "repository": {
        "type": "git",
        "url": "https://github.com/Rollphes/repos-manager"
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "icon": "icon.png",
    "categories": [
        "Other"
    ],
    "keywords": [
        "git",
        "repository",
        "project",
        "manager",
        "scanner"
    ],
    "activationEvents": [],
    "main": "./dist/extension/index.js",
    "contributes": {
        "views": {
            "activitybar": [
                {
                    "id": "reposManager",
                    "name": "Repos Manager",
                    "icon": "$(folder-library)"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "reposManagerContainer",
                    "title": "Repos Manager",
                    "icon": "$(folder-library)"
                }
            ]
        },
        "commands": [
            {
                "command": "reposManager.refresh",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "reposManager.openRepository",
                "title": "Open in Current Window"
            },
            {
                "command": "reposManager.openInNewWindow",
                "title": "Open in New Window"
            },
            {
                "command": "reposManager.addToFavorites",
                "title": "Add to Favorites",
                "icon": "$(star-empty)"
            },
            {
                "command": "reposManager.removeFromFavorites",
                "title": "Remove from Favorites",
                "icon": "$(star-full)"
            },
            {
                "command": "reposManager.openInTerminal",
                "title": "Open in Terminal",
                "icon": "$(terminal)"
            },
            {
                "command": "reposManager.openInFileExplorer",
                "title": "Reveal in File Explorer",
                "icon": "$(folder-opened)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "reposManager.refresh",
                    "when": "view == reposManager",
                    "group": "navigation@1"
                }
            ],
            "view/item/context": [
                {
                    "command": "reposManager.openRepository",
                    "when": "view == reposManager && (viewItem == repository || viewItem == repositoryFavorite)",
                    "group": "navigation@1"
                },
                {
                    "command": "reposManager.openInNewWindow",
                    "when": "view == reposManager && (viewItem == repository || viewItem == repositoryFavorite)",
                    "group": "navigation@2"
                },
                {
                    "command": "reposManager.addToFavorites",
                    "when": "view == reposManager && viewItem == repository",
                    "group": "navigation@3"
                },
                {
                    "command": "reposManager.removeFromFavorites",
                    "when": "view == reposManager && viewItem == repositoryFavorite",
                    "group": "navigation@3"
                },
                {
                    "command": "reposManager.openInTerminal",
                    "when": "view == reposManager && (viewItem == repository || viewItem == repositoryFavorite)",
                    "group": "navigation@4"
                },
                {
                    "command": "reposManager.openInFileExplorer",
                    "when": "view == reposManager && (viewItem == repository || viewItem == repositoryFavorite)",
                    "group": "navigation@5"
                }
            ]
        },
        "configuration": {
            "title": "Repos Manager",
            "properties": {
                "reposManager.scan.targetDirectories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "An array of absolute paths to directories to scan for repositories."
                },
                "reposManager.scan.excludePatterns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "**/node_modules/**",
                        "**/.git/**",
                        "**/dist/**",
                        "**/build/**",
                        "**/.next/**",
                        "**/.nuxt/**"
                    ],
                    "description": "An array of glob patterns to exclude directories from the scan."
                },
                "reposManager.display.highlightUpdatedWithinDays": {
                    "type": "number",
                    "default": 7,
                    "minimum": 0,
                    "description": "Repositories updated within this number of days will be highlighted. Set to 0 to disable."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile-production",
        "compile": "webpack --mode development",
        "compile-production": "webpack --mode production",
        "watch": "webpack --mode development --watch",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "package": "vsce package",
        "deploy": "vsce publish",
        "ci": "npm run lint:fix && npm run test && npm run compile && npm run package",
        "ci:install": "npm run ci && code --install-extension repos-manager-0.1.0.vsix --force"
    },
    "devDependencies": {
        "@eslint/js": "^9.30.1",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.0.10",
        "@types/vscode": "^1.80.0",
        "@vscode/vsce": "^3.6.0",
        "eslint": "^9.30.1",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-jsdoc": "^51.3.3",
        "eslint-plugin-prettier": "^5.5.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "jest": "^30.0.3",
        "prettier": "^3.6.2",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.0",
        "typescript-eslint": "^8.35.1",
        "webpack": "^5.88.0",
        "webpack-cli": "^6.0.1"
    },
    "dependencies": {
        "glob": "^11.0.3",
        "semver": "^7.5.0",
        "simple-git": "^3.19.0"
    }
}