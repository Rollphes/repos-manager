{
    "name": "repos-manager",
    "displayName": "Repos Manager",
    "description": "Advanced repository management for VS Code - scan, analyze, and organize your Git repositories efficiently",
    "version": "0.1.0",
    "publisher": "Rollphes",
    "repository": {
        "type": "git",
        "url": "https://github.com/Rollphes/repos-manager"
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "icon": "extension/resources/icon.png",
    "categories": [
        "Other"
    ],
    "keywords": [
        "git",
        "repository",
        "project",
        "manager",
        "workspace",
        "scanner"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "reposManager",
                    "name": "Repos Manager",
                    "when": "reposManager.enabled"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "reposManagerContainer",
                    "title": "Repos Manager",
                    "icon": "$(folder-library)"
                }
            ]
        },
        "commands": [
            {
                "command": "reposManager.refresh",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "reposManager.openSettings",
                "title": "Settings",
                "icon": "$(gear)"
            },
            {
                "command": "reposManager.scanRepositories",
                "title": "Scan Repositories"
            },
            {
                "command": "reposManager.openRepository",
                "title": "Open Repository"
            },
            {
                "command": "reposManager.openRepositoryInNewWindow",
                "title": "Open in New Window"
            },
            {
                "command": "reposManager.toggleFavorite",
                "title": "Toggle Favorite"
            },
            {
                "command": "reposManager.addToFavorites",
                "title": "Add to Favorites"
            },
            {
                "command": "reposManager.removeFromFavorites",
                "title": "Remove from Favorites"
            },
            {
                "command": "reposManager.search",
                "title": "Search Repositories",
                "icon": "$(search)"
            },
            {
                "command": "reposManager.filter",
                "title": "Filter Repositories",
                "icon": "$(filter)"
            },
            {
                "command": "reposManager.clearFilters",
                "title": "Clear All Filters",
                "icon": "$(clear-all)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "reposManager.refresh",
                    "when": "view == reposManager",
                    "group": "navigation@1"
                },
                {
                    "command": "reposManager.search",
                    "when": "view == reposManager",
                    "group": "navigation@3"
                },
                {
                    "command": "reposManager.filter",
                    "when": "view == reposManager",
                    "group": "navigation@4"
                },
                {
                    "command": "reposManager.clearFilters",
                    "when": "view == reposManager",
                    "group": "1_filter@1"
                }
            ],
            "view/item/context": [
                {
                    "command": "reposManager.openRepository",
                    "when": "view == reposManager && viewItem == repository",
                    "group": "1_open@1"
                },
                {
                    "command": "reposManager.openRepositoryInNewWindow",
                    "when": "view == reposManager && viewItem == repository",
                    "group": "1_open@2"
                },
                {
                    "command": "reposManager.addToFavorites",
                    "when": "view == reposManager && viewItem == repository && !reposManager.isFavorite",
                    "group": "2_favorites@1"
                },
                {
                    "command": "reposManager.removeFromFavorites",
                    "when": "view == reposManager && viewItem == repository && reposManager.isFavorite",
                    "group": "2_favorites@1"
                }
            ]
        },
        "configuration": {
            "title": "Repos Manager",
            "properties": {
                "reposManager.scanPaths": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "Root directories to scan for repositories"
                },
                "reposManager.excludePatterns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "node_modules",
                        ".git",
                        "dist",
                        "build",
                        ".next",
                        ".nuxt"
                    ],
                    "description": "Patterns to exclude from scanning"
                },
                "reposManager.maxDepth": {
                    "type": "number",
                    "default": 5,
                    "minimum": 1,
                    "maximum": 10,
                    "description": "Maximum depth for directory scanning"
                },
                "reposManager.displayMode": {
                    "type": "string",
                    "enum": [
                        "compact",
                        "standard",
                        "detailed"
                    ],
                    "default": "compact",
                    "description": "Display mode for repository list"
                },
                "reposManager.showFavorites": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show favorites section"
                },
                "reposManager.groupBy": {
                    "type": "string",
                    "enum": [
                        "none",
                        "language",
                        "owner"
                    ],
                    "default": "none",
                    "description": "Group repositories by criteria"
                },
                "reposManager.cacheEnabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable caching for better performance"
                },
                "reposManager.cacheTtlHours": {
                    "type": "number",
                    "default": 24,
                    "minimum": 1,
                    "maximum": 168,
                    "description": "Cache time-to-live in hours"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile-production",
        "compile": "webpack --mode development",
        "compile-production": "webpack --mode production",
        "watch": "webpack --mode development --watch",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "package": "vsce package",
        "deploy": "vsce publish"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vscode/vsce": "^2.19.0",
        "eslint": "^8.45.0",
        "jest": "^29.6.0",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.0",
        "typescript": "^5.1.0",
        "webpack": "^5.88.0",
        "webpack-cli": "^5.1.0"
    },
    "dependencies": {
        "glob": "^10.3.0",
        "semver": "^7.5.0",
        "simple-git": "^3.19.0"
    }
}